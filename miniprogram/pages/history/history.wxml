<!-- 日历年月 -->
<view class='calendar_title flex_nowrap bold'>
  <view class='icon' bindtap='lastMonth'>
    <text decode="{{true}}">&nbsp;&nbsp;&lt;&nbsp;&nbsp;</text>
  </view>
  <view>{{year}}年{{month}}月</view>
  <view class='icon' bindtap='nextMonth'>
    <text decode="{{true}}">&nbsp;&nbsp;&gt;&nbsp;&nbsp;</text>
  </view>
</view>

<view class="table">
  <view class="tr bg-w bold">
    <view>打卡日期</view>
  </view>
  <block wx:for="{{dayList}}" wx:key="id">
    <view bindtap='selectDay' data-clockin_date='{{item.clockin_date}}'
      class='{{isToday == item.clockin_date ? "nowDay" : "nowDay2"}}'>
      <view class="date-head">
        <text
          decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;{{item.clockin_date}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{item.week}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{item.big_name}}</text>
      </view>
    </view>
    <view class="line"></view>
  </block>
</view>

<view class="table" wx:for="{{clockinList}}" wx:key="id">
  <view class="tr bg-w bold">
    <view>{{item.small_name}}</view>
  </view>

  <block wx:for="{{item.groupList}}" wx:for-item="groupList" wx:key="id">
    <view class="tr bg-g">
      <view class="td-1">第{{groupList.group}}组</view>
      <view class="td-2">{{groupList.weight}}{{groupList.unit}}</view>
      <view class="td-3">{{groupList.number}}次</view>
    </view>
    <view class="line"></view>
  </block>
</view>

<view class="table">
  <view class="tr bg-w bold">
    <view>肌肉群统计</view>
  </view>
  <block wx:for="{{aggregate5List}}" wx:key="id">
    <view class="tr bg-g">
      <view class="td-s1">{{item._id}}</view>
      <view class="td-2">共{{item.num}}天次</view>
    </view>
    <view class="line"></view>
  </block>
</view>

<view class="table">
  <view class="tr bg-w bold">
    <view>动作统计</view>
  </view>
  <block wx:for="{{aggregate1List}}" wx:key="id">
    <view class="tr bg-g">
      <view class="td-s1">{{item._id}}</view>
      <view class="td-2">共{{item.num}}天次</view>
    </view>
    <view class="line"></view>
  </block>
</view>

<view class="table">
  <view class="tr bg-w bold">
    <view>开始统计</view>
  </view>
  <block wx:for="{{aggregate6List}}" wx:key="id">
    <view class="tr bg-g">
      <view class="td-x1">{{item._id}}</view>
      <view class="td-2">{{item.startDate}}开始</view>
    </view>
    <view class="line"></view>
  </block>
</view>

<view class="table" wx:for="{{muscleList}}" wx:for-item="muscleList" wx:key="id">
  <view class='tr bg-1'>
    <text class="item1 bold">{{muscleList.muscle}}</text>
    <text class="item2">{{muscleList.days}}</text>
  </view>
  <block wx:for="{{muscleList.actionList}}" wx:for-item="actionList" wx:key="id">
    <view class="tr bg-2 item3">{{actionList.action}}</view>
    <view class="line"></view>
    <block wx:for="{{actionList.groupList}}" wx:for-item="groupList" wx:key="id">
      <view class="tr bg-3">
        <view class="td1">{{groupList.weight}}</view>
        <view class="td2">{{groupList.start}}</view>
        <view class="td3">{{groupList.days}}</view>
      </view>
      <view class="line"></view>
    </block>
  </block>
</view>