<!-- 日历年月 -->
<view class='calendar_title flex_nowrap'>
  <view class='icon' bindtap='lastMonth'>
    <text decode="{{true}}">&nbsp;&nbsp;&lt;&nbsp;&nbsp;</text>
  </view>
  <view>{{year}}年{{month}}月</view>
  <view class='icon' bindtap='nextMonth'>
    <text decode="{{true}}">&nbsp;&nbsp;&gt;&nbsp;&nbsp;</text>
  </view>
</view>

<!-- 日历主体 -->
<view class='calendar'>
  <view class='header'>
    <view wx:for='{{date}}' wx:key='key' class='{{(index == todayIndex) && isTodayWeek ? "weekMark" : ""}}'>
      {{item}}
    </view>
  </view>

  <view class='date-box'>
    <block wx:for='{{dateArr}}' wx:key='key'>
      <view class='{{isToday == item.isToday ? "nowDay" : ""}}'>
        <view class='date-head' bindtap='selectDay' data-year='{{year}}' data-month='{{month}}'
          data-datenum='{{item.dateNum}}'>
          <view>{{item.dateNum}}</view>
        </view>
      </view>
    </block>
  </view>
</view>


<view class="table" wx:for="{{clockinList}}" wx:key="id">
  <view class="tr bg-w">
    <view>{{item.small_name}}</view>
  </view>

  <block wx:for="{{item.groupList}}" wx:for-item="groupList" wx:key="id">
    <view class="tr bg-g">
      <view class="td-1">第{{groupList.group}}组</view>
      <view class="td-2">{{groupList.weight}}{{groupList.unit}}</view>
      <view class="td-3">{{groupList.number}}次</view>
    </view>
    <view class="line"></view>
  </block>
</view>